//- 환경설정(Configuration)
block config
	include _config

//- 문서 시작
include ../_parts/_docHead
	head
		meta(http-equiv="X-UA-Compatible", content="IE="+iecompat)
		meta(charset=encoding)
		//- 문서 제목
		title
			block pageTitle
				| #{pageTitle}
		//- 메타 요소
		block metaElements
			meta(name="description", content=description)
			meta(name="keywords", content=keywords)
			meta(name="author", content=author)
			meta(name="viewport", content="width=device-width, initial-scale=1")
		//- 스타일시트
		block stylesheets
			if fontawesome
				if CDN
					link(rel="stylesheet", href="//cdnjs.cloudflare.com/ajax/libs/font-awesome/"+fontawesome_ver+"/css/font-awesome.min.css")
				else
					link(rel="stylesheet", href="css/fontawesome/css/font-awesome.min.css")
			link(rel="stylesheet", href="css/style.css")
		//- 스크립트(head)
		block headScripts
			if modernizr
				if CDN
					script(src="//cdnjs.cloudflare.com/ajax/libs/modernizr/"+modernizr_ver+"/modernizr.min.js")
				else
					script(src="js/libs/modernizr/modernizr.js")
			if detectizr
				if CDN
					script(src="//cdnjs.cloudflare.com/ajax/libs/detectizr/"+detectizr_ver+"/detectizr.min.js")
				else
					script(src="js/libs/detectizr/dist/detectizr.min.js")
				//- 사용법은 .ref-detectizr 문서 참고
				script.
					//- Modernizr.Detectizr.detect();
			if jquery
				if CDN
					script(src="//ajax.googleapis.com/ajax/libs/jquery/"+jquery_ver+"/jquery.min.js")
				else
					script(src="js/libs/jquery/dist/jquery.min.js")
			if bowerLibs
					script(src="js/bower-libs.min.js")
	body
		//- 헤더 영역
		block header
			include ../_parts/_header
		//- 내비게이션 영역
		block navigation
			include ../_parts/_navigation
		//- 메인 영역
		block main
			include ../_parts/_main
		//- 사이드바 영역
		block aside
		//- 푸터 영역
		block footer
			include ../_parts/_footer
		//- 스크립트(body)
		block bodyEndScripts